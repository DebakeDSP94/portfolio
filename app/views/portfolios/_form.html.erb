<%= form_with model: @portfolio_item do |form| %>
  <% if portfolio_item.errors.any? %>
        <% portfolio_item.errors.full_messages.each do |error| %>
          <%= render "shared/flash", level: :error, content: error %>
        <% end %>
  <% end %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, class: 'form-control' %>
      </div>
      <div class="form-group">
      <label class="btn btn-primary">
        Upload an image file  <%= form.file_field :main_image, style: 'display: none;' %>
      </label>
      </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
        <%= form.label :body %>
        <%= form.rich_text_area :body, class: 'form-control', rows: 12 %>
      </div>
    </div>
  </div>
  
  <hr>

  <div class="col-md-12">

  <h2>Technologies Used</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render partial: 'technology_fields', :locals => { :form => technology_form }  %>
      <% end %>
    </div>
    <div>
      <%= link_to_add_nested(form, :technologies, '#Add-Technology', partial: 'technology_fields') %>
    </div>

    <div class="form-group">
      <%= form.submit "Save Portfolio Item", class: 'btn btn-primary btn-block'%>
    </div>
    <% end %>
  </div>