<div class="col-sm-8 blog-main">

  <h2><%= @blog.title %></h2>

  <nav class="breadcrumb">
    <%= link_to "Home", root_path, class: 'breadcrumb-item'%>
    <%= link_to @blog.topic.title, topic_path(@blog.topic), class: 'breadcrumb-item'%>
    <span class="breadcrumb-item active"><%= @blog.title %></span>

    <span class="pull-right">
      <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:admin) %>
      <%= link_to fa_icon('trash'), @blog, data: { turbo_method: :delete,
                        turbo_confirm: "Are you sure you wnat to delete this post" }, class: 'btn btn-outline-danger' if logged_in?(:admin) %>
    </span>
  </nav>

  <p>
  <%= @blog.body %>

  <%= render partial: 'comments/comments', locals: {commentable: @blog} %>
  <%= render partial: 'comments/form', locals: {commentable: @blog} %>

</div>