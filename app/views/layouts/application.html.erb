<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Lato|Roboto+Slab" rel="stylesheet">

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag "main", media: 'all', "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <%= render "shared/application_nav" %>

    <div class="site-wrapper">
      <div class="site-wrapper-inner">
        <div class="cover-container">
	        <%= video_tag(
            'video_bg_small.mp4',
            id: 'background',
            autoplay: true,
            loop: true,
            muted: true,
            poster: 'homebg.png'
          ) %>

          <%= yield %>
          <%= render "shared/application_footer" %>
          <%= render 'shared/flash_container' %>
        </div>
      </div>
    </div>
  </body>
</html>
